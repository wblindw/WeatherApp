<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- CURRENT -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1">

        <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/conditionLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:flexDirection="column"
            app:layout_alignSelf="center">

            <ImageView
                android:id="@+id/conditionIco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:scaleType="center"
                android:src="@drawable/clear_d" />

            <TextView
                android:id="@+id/conditionDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="xxx"
                android:textColor="@color/colorFontSecondary"
                android:textSize="24sp" />

        </com.google.android.flexbox.FlexboxLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:justifyContent="center">

                <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/cTempsValueLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flexDirection="column"
                    app:justifyContent="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tempValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="x"
                            android:textAlignment="center"
                            android:textColor="@color/colorFontPrimary"
                            android:textSize="70sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tempUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:text="Â°C"
                            android:textColor="@color/colorFontSecondary"
                            android:textSize="70sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tempDecimalValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:includeFontPadding="false"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:text="x"
                            android:textAlignment="viewEnd"
                            android:textColor="@color/colorFontSecondary"
                            android:textSize="40sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cTempMinMaxFeelLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:dividerDrawable="@drawable/empty_v_divider"
                        app:flexDirection="row"
                        app:justifyContent="space_between">

                        <LinearLayout
                            android:id="@+id/tempMinMaxLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:divider="@drawable/empty_h_divider"
                            android:orientation="horizontal"
                            android:showDividers="middle">

                            <TextView
                                android:id="@+id/tempMinValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill"
                                android:includeFontPadding="false"
                                android:paddingLeft="5dp"
                                android:text="x"
                                android:textColor="@color/colorFontSecondary"
                                android:textSize="20sp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/colorFontSecondary" />

                            <TextView
                                android:id="@+id/tempMaxValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:includeFontPadding="false"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:text="x"
                                android:textAlignment="viewStart"
                                android:textColor="@color/colorFontSecondary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tempFeelValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="fill"
                                android:includeFontPadding="false"
                                android:text="xxx"
                                android:textColor="@color/colorFontSecondary"
                                android:textSize="20sp" />
                        </LinearLayout>

                    </com.google.android.flexbox.FlexboxLayout>

                </com.google.android.flexbox.FlexboxLayout>

                <ImageView
                    android:id="@+id/tempValueImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="center"
                    android:src="@drawable/temp_value" />

            </com.google.android.flexbox.FlexboxLayout>

            <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                app:justifyContent="flex_start"
                app:layout_alignSelf="center">

                <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:flexDirection="row"
                    app:justifyContent="space_around"
                    app:layout_alignSelf="center">

                    <com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:flexDirection="column"
                        app:justifyContent="space_around">

                        <LinearLayout
                            android:id="@+id/rainLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/rainValueImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/rain_value" />

                            <LinearLayout
                                android:id="@+id/rainValueLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/rainValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="0dp"
                                    android:text="x"
                                    android:textColor="@color/colorFontPrimary"
                                    android:textSize="40sp" />

                                <TextView
                                    android:id="@+id/rainUnit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="0dp"
                                    android:paddingRight="0dp"
                                    android:text="%"
                                    android:textColor="@color/colorFontSecondary"
                                    android:textSize="20sp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/snowLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:orientation="horizontal">>

                            <ImageView
                                android:id="@+id/snowValueImage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/snow_value" />

                            <LinearLayout
                                android:id="@+id/snowValueLayout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/snowValue"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="0dp"
                                    android:text="x"
                                    android:textColor="@color/colorFontPrimary"
                                    android:textSize="40sp" />

                                <TextView
                                    android:id="@+id/snowUnit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:includeFontPadding="false"
                                    android:paddingLeft="0dp"
                                    android:paddingRight="0dp"
                                    android:text="%"
                                    android:textColor="@color/colorFontSecondary"
                                    android:textSize="20sp" />
                            </LinearLayout>

                        </LinearLayout>


                    </com.google.android.flexbox.FlexboxLayout>

                </com.google.android.flexbox.FlexboxLayout>

            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>

    </LinearLayout>

    <ViewFlipper
        android:id="@+id/currentWeatherViewFlipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1">

        <include
            android:id="@+id/hourlyLayout"
            layout="@layout/hourly_forecast" />

        <LinearLayout
            android:id="@+id/days_forecast"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"></LinearLayout>

    </ViewFlipper>

</LinearLayout>

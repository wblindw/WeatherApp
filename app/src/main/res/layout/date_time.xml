<com.google.android.flexbox.FlexboxLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cdtLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:alignContent="center"
    app:alignItems="baseline"
    app:dividerDrawable="@drawable/empty_v_divider"
    app:flexDirection="column"
    app:showDivider="middle"
    app:layout_flexGrow="1">

    <LinearLayout
        android:id="@+id/cdLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ctDayValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="xx:xx:xx"
            android:textColor="@color/colorFontPrimary"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ctDateValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="xx:xx:xx"
            android:textColor="@color/colorFontSecondary"
            android:textSize="40sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ctLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ctTimeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="XX:XX"
            android:textColor="@color/colorFontPrimary"
            android:textSize="90sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ctTimeSecValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:text="XX"
            android:textColor="@color/colorFontSecondary"
            android:textSize="70sp"
            android:textStyle="bold" />
    </LinearLayout>

</com.google.android.flexbox.FlexboxLayout>